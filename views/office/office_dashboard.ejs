<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script>
document.getElementById('generate-report').addEventListener('click', async () => {
    try {
        // Dashboard elementini seç
        const dashboardElement = document.getElementById('content-wrapper'); // Dashboard ana wrapper ID'si
        
        // html2canvas ile canvas oluştur
        const canvas = await html2canvas(dashboardElement, {
            scale: 2, // Çözünürlüğü artır (Varsayılan 1, 2 veya 3 deneyebilirsiniz)
            useCORS: true, // Harici kaynaklara izin ver
        });

        // Canvas'ı görüntüye dönüştür
        const imgData = canvas.toDataURL('image/png');

        // PDF oluştur
        const pdf = new jspdf.jsPDF('p', 'mm', 'a4'); // Portrait, mm birimi, A4 boyutu
        const pdfWidth = pdf.internal.pageSize.getWidth();
        const pdfHeight = (canvas.height * pdfWidth) / canvas.width;

        // Yükseklik sayfayı aşarsa birden fazla sayfa ekle
        if (pdfHeight > pdf.internal.pageSize.getHeight()) {
            let position = 0;
            let remainingHeight = canvas.height;
            const pageHeight = pdf.internal.pageSize.getHeight() * canvas.width / pdfWidth;

            while (remainingHeight > 0) {
                const currentCanvas = document.createElement('canvas');
                currentCanvas.width = canvas.width;
                currentCanvas.height = Math.min(pageHeight, remainingHeight);
                const ctx = currentCanvas.getContext('2d');
                ctx.drawImage(
                    canvas,
                    0,
                    position,
                    canvas.width,
                    Math.min(pageHeight, remainingHeight),
                    0,
                    0,
                    canvas.width,
                    Math.min(pageHeight, remainingHeight)
                );
                const imgDataPart = currentCanvas.toDataURL('image/png');
                pdf.addImage(imgDataPart, 'PNG', 0, 0, pdfWidth, (currentCanvas.height * pdfWidth) / canvas.width);
                remainingHeight -= pageHeight;
                position += pageHeight;
                if (remainingHeight > 0) pdf.addPage();
            }
        } else {
            pdf.addImage(imgData, 'PNG', 0, 0, pdfWidth, pdfHeight);
        }

        // PDF'yi yeni bir sekmede aç
        pdf.output('dataurlnewwindow');

        // PDF'yi indir
        pdf.save('Dashboard_Report.pdf');
    } catch (error) {
        console.error('Rapor oluşturulurken hata oluştu:', error);
    }
});

</script>

