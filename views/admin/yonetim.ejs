<link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <style>
        /* Harita ve sayfa düzeni */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        #map {
            height: 100%;
            width: 100%;
        }
    </style>
</head>
<body>
    <!-- Harita Konteyneri -->
    <div id="map"></div>

    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script>
        // Haritayı başlat
        const map = L.map('map', {
            center: [20, 0], // Dünya haritasının merkezi
            zoom: 2, // Başlangıç yakınlaştırma seviyesi
            minZoom: 2, // Minimum yakınlaştırma seviyesi
            maxBounds: [
                [-90, -180], // Güneybatı köşesi
                [90, 180]    // Kuzeydoğu köşesi
            ],
            maxBoundsViscosity: 1.0 // Harita sınırlarına yapışkanlık
        });

        // Harita döşemelerini yükle
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap contributors'
        }).addTo(map);

        // Gemi verileri
        const ships = [
            { name: "Gemi 1", lat: 38.4192, lon: 27.1287 }, // İzmir
            { name: "Gemi 2", lat: 50.4501, lon: 30.5234 }, // Ukrayna (Kiev)
            { name: "Gemi 3", lat: 40.4168, lon: -3.7038 }  // İspanya (Madrid)
        ];

        // Gemi işaretleyicilerini haritaya ekle
        ships.forEach(ship => {
            L.marker([ship.lat, ship.lon]) // İşaretleyiciyi belirli bir konuma ekle
                .addTo(map)                // Haritaya ekle
                .bindPopup(`<b>${ship.name}</b>`) // Popup ile gemi adını göster
                .openPopup();             // İlk açılışta pop-up gösterimi
        });
    </script>