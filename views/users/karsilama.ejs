<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modal Popup</title>
    <link rel="stylesheet" href="styles.css">
    <style> /* Modal container */
  body {
    font-family: Arial, sans-serif;
    background-color: #1f1f1f;
    color: white;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
}

/* Sayfanın ortasında içerik kutusu */
.centered-content {
    background-color: #2a2a2a;
    padding: 20px;
    border-radius: 10px;
    width: 60%; /* Boyutunu küçülttük */
    max-width:400px; /* Responsive genişlik */
    text-align: center;
    color: #fff;
    box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.5);
}

/* Başlık */
.centered-content h2 {
    font-size: 24px;
    color: #fff;
}

/* Görsel */
.image-container img {
    max-width: 100%;
    height: auto;
    margin-bottom: 15px;
    border-radius: 5px;
}

/* Metin stili */
.centered-content p {
    font-size: 16px;
    line-height: 1.6;
    color: #ddd;
    margin: 15px 0;
}

        </style>
</head>
<body>
    
    

    <!-- Button to Open the Modal -->
    <div class="centered-content">
        <h2>Değerli Kullanıcı</h2>
        <div class="image-container">
            <img src="/image/kars.jpg" alt="Fleet Optima and Green Shift">
        </div>
    
        <!-- Logout Butonu -->
        <div class="logout-container">
            <a href="/" class="btn-logout">Logout</a>
        </div>
    </div>
    <script >// Get the modal
        const modal = document.getElementById("modal");
        
        // Get the button that opens the modal
        const openModalBtn = document.getElementById("openModalBtn");
        
        // Get the close button
        const closeModalBtn = document.getElementById("closeModalBtn");
        
        // When the user clicks the button, open the modal
        openModalBtn.onclick = function() {
            modal.style.display = "block";
        }
        
        // When the user clicks on close (X) or "Kapat" button, close the modal
        closeModalBtn.onclick = function() {
            modal.style.display = "none";
        }
        
        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
        
        </script>
</body>
</html>
